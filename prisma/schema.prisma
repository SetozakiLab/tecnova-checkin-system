generator client {
  provider      = "prisma-client-js"
  output        = "../src/generated/prisma"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  username       String   @unique
  hashedPassword String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  role           Role     @default(SUPER)

  @@map("users")
}

enum Role {
  SUPER
  MANAGER
}

// 活動カテゴリ（活動ログ用）
enum ActivityCategory {
  VR_HMD
  DRONE
  PRINTER_3D
  PEPPER
  LEGO
  MBOT2
  LITTLE_BITS
  MESH
  TOIO
  MINECRAFT
  UNITY
  BLENDER
  DAVINCI_RESOLVE
  OTHER
}

model ActivityLog {
  id            String             @id @default(cuid())
  guest         Guest              @relation(fields: [guestId], references: [id], onDelete: Cascade)
  guestId       String
  // 複数カテゴリ対応
  categories    ActivityCategory[]
  // ゲスト活動内容(任意) / mentorNote(任意)
  description   String?            @db.VarChar(100)
  mentorNote    String?            @db.VarChar(200)
  timeslotStart DateTime // JSTで30分単位にfloorされた開始時刻
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt

  @@unique([guestId, timeslotStart])
  @@index([timeslotStart])
  @@map("activity_log")
}

model Guest {
  id           String          @id @default(uuid())
  displayId    Int             @unique // アプリケーションロジックで生成
  name         String
  contact      String?
  grade        Grade?
  createdAt    DateTime        @default(now())
  updatedAt    DateTime        @updatedAt
  checkins     CheckinRecord[]
  activityLogs ActivityLog[]

  @@map("guests")
}

model CheckinRecord {
  id         String    @id @default(uuid())
  guestId    String
  checkinAt  DateTime
  checkoutAt DateTime?
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  guest      Guest     @relation(fields: [guestId], references: [id], onDelete: Cascade)

  @@map("checkin_records")
}

enum Grade {
  ES1
  ES2
  ES3
  ES4
  ES5
  ES6
  JH1
  JH2
  JH3
  HS1
  HS2
  HS3
}
